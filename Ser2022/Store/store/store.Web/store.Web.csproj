    <Content Remove="Areas\Store\DocumentType\DocumentTypeIndex.cshtml" />
    <Content Remove="Areas\Store\Products\ProductsIndex.cshtml" />
    <Content Remove="Areas\Store\Wares\WaresIndex.cshtml" />
    <Content Remove="Areas\Store\_ViewImports.cshtml" />
    <Content Remove="Areas\Store\_ViewStart.cshtml" />
    <Content Remove="Modules\Store\Categories\CategoriesIndex.cshtml" />
    <None Remove="App_Data\Reporting\wkhtmltopdf.exe" />
    <None Remove="typings\jspdf\jspdf.d.ts" />
    <TypeScriptCompile Remove="Modules\Common\Helpers\DialogUtils.ts" />
    <TypeScriptCompile Remove="Modules\Common\Helpers\ExcelExportHelper.ts" />
