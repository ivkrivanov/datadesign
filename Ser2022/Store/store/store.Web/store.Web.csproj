    <TypeScriptCompile Remove="Modules\Store\Counterparties\CounterpartiesProductMovementDialog.ts" />
    <TypeScriptCompile Remove="Modules\Store\Counterparties\CounterpartiesProductMovementGrid.ts" />
    <TypeScriptCompile Remove="Modules\Store\Counterparties\CounterpartyWaresMovementDialog.ts" />
    <TypeScriptCompile Remove="Modules\Store\Counterparties\CounterpartyWaresMovementGrid.ts" />
    <TypeScriptCompile Remove="Modules\Store\Employees\EmployeesFormatter.ts" />
    <TypeScriptCompile Remove="Modules\Store\Employees\EmployeesListFormatter.ts" />
