    <Compile Remove="Modules\Common\Helpers\PdfExportHelper.cs" />
    <Compile Remove="Modules\Store\Notes\NotesRepository.cs" />
    <Compile Remove="Modules\Store\Notes\_NotesBehavior.cs" />
    <Content Remove="Areas\Store\Categories\CategoriesIndex.cshtml" />
