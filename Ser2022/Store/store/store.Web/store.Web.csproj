      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="Areas\Store\ProductDetails\ProductDetailsIndex.cshtml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
