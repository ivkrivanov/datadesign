@model Store.Store.WaresMovementDetailReportData

@if ((bool?)ViewData["Printing"] == true)
{
    Layout = MVC.Views.Shared._LayoutNoNavigation;
}

<section class="invoice">
    <div class="row">
        <div class="col-xs-12">
            <h2 class="page-header">
                СТОКОВА РАЗПИСКА
                <small class="pull-right">@DateTime.Now.ToShortDateString()</small>
            </h2>
        </div>
    </div>
    <!-- info row -->
    <div class="row invoice-info">


        <!-- /.col -->
        <div class="col-sm-4 invoice-col">
            To
            <address>
                <strong>@Model.Counterparty.CompanyName</strong>
                <br>
                @Model.Counterparty.Address
                Phone: @Model.Counterparty.Phone
                <br>
            </address>
        </div>
        <!-- /.col -->
        <div class="col-sm-4 invoice-col">

            <br>
            <b>Order ID:</b> @Model.WaresMovement.WaresMoveID<br>
            @*<b>Payment Due:</b> @Model.WaresMovement.OrderDate.Value.ToShortDateString()<br>*@
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- Table row -->
    <div class="row">
        <div class="col-xs-12 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Wares</th>
                         <th>Unit Price</th>
                         <th>Quantity</th>
                         <th>Discount</th>
                         <th>Line Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model.Details)
                    {
                         <tr>
                             <td>@d.WaresName</td>
                             <td>@(d.WaresUnitPrice.ToStringDefault("#,##0.00"))</td>
                             <td>@(d.Quantity.ToStringDefault())</td>
                             <td>@(d.Discount.ToStringDefault("#,##0.00"))</td>
                             <td>@(d.LineTotal.ToStringDefault("#,##0.00"))</td>
                         </tr>
                     }
                </tbody>
            </table>
        </div>
        <!-- /.col -->
    </div>


</section>